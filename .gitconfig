[user]
	name = Julius Plenz
	email = feh@hostname
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dfc = diff --cached
	lg = log -p
	t = log --oneline --graph --decorate
	k = ! env LC_ALL=C gitk --all
	ch = cherry -v
	cp = cherry-pick
	b = branch -av
	i = ! git init && git commit --allow-empty -m 'initial commit' && \
		git install-myhooks
	cim = commit -m
	fm = merge --ff-only
	nfm = merge --no-ff
	install-myhooks = !~/.gitstuff/install-myhooks
	int = branch -a -vv --no-merged
	mod = diff --name-status
	remote-tags = "!f() { git ls-remote -t \"$1\" | sed 's,^.*refs/tags/,,;s/\\^.*$//' | uniq; } ; f"
	fixup = commit --amend -C HEAD
	track = branch --set-upstream
	ft = merge --ff-only @{u}
	lu = log ..@{u}
	todo = !git rev-parse --symbolic --branches | xargs git show-branch --topics master
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[merge]
	tool = vimdiff
	log = true
[rerere]
	enabled = true
[diff]
	renames = true
	mnemonicprefix = true
[myhooks]
	umlautcheck = false
[push]
	default = tracking
[rebase]
	stat = true
	autosquash = true
[core]
	trustctime = false
