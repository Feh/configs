[user]
	name = Julius Plenz
	email = feh@hostname
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dfc = diff --cached
	lg = log -p
	#tree = log --pretty=format:'%Cgreen%h%Creset : %s (%cr)' --graph --all
	tree = log --pretty=oneline --graph --decorate --abbrev-commit --all
	k = ! gitk --all
	ch = cherry -v
	b = branch -av
	i = ! git init && git commit --allow-empty -m 'initial commit'
[color]
	branch = auto
	diff = auto
	status = auto
[merge]
	tool = vimdiff
[rerere]
	enabled = true
